#!/usr/bin/env python3
import sys

import gradle
from util import Error, main_wrapper


def main(args: list[str]) -> None:
    if not args:
        raise Error("usage: gradle-var {name}")
    var_name = args[0]

    config = gradle.BuildConfig()
    value = config.get(var_name)
    if value is None:
        raise Error(f"Invalid variable name: {var_name}")
    print(value)


with main_wrapper():
    main(sys.argv[1:])
